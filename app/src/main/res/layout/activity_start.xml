<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/uniber"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/ride_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="乗りたい！(ドライバー検索)"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新しく乗りたいor乗せたい！"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginBottom="121dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ride_button"
        android:layout_alignEnd="@+id/ride_button" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/add_driver_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乗せたい！(出発登録)"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/ride_button"
        android:layout_alignStart="@+id/ride_button"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/ride_button" />

</RelativeLayout>